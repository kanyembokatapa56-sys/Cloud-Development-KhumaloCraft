@page
@model KhumaloCraftEmporium_ST10265272.Pages.ProductInfo.DeleteProductModel
@{
}

<h1>Delete Product</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>

    <a asp-page="/ProductInfo/Products">Back to List</a>
}

else
{
    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this product?</h4>
        <p><strong>Name:</strong> @Model.Product.Name</p>
        <p><strong>Category:</strong> @Model.Product.Category</p>
        <p><strong>Availability:</strong> @Model.Product.Availability</p>
        <p><strong>Price:</strong> R @Model.Product.Price</p>
        <p><strong>Description:</strong> @Model.Product.Description</p>

        <form method="post">
            <input type="hidden" name="ID" value="@Model.Product.ID" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="/ProductInfo/Products" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
}